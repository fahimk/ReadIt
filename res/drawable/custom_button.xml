<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true">
		<shape>
			<gradient android:startColor="#FFA81321" android:endColor="#FF85141E"
				android:angle="270" />
		</shape>
	</item>

	<item android:state_enabled="false">
		<shape>
			<gradient android:startColor="#00858585" android:endColor="#002E2E2E"
				android:angle="270" />
		</shape>
	</item>


	<item>
		<shape>
			<gradient android:endColor="#FF5C5C5C" android:startColor="#FF5C5C5C"
				android:angle="270" />
			<stroke android:width="2dp" android:color="#33FFFFFF" />
		</shape>
	</item>
</selector>