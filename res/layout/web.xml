<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/mainFrame"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<WebView android:id="@+id/webView" android:layout_width="fill_parent"
		android:layout_height="fill_parent" />
	<com.fahimk.readabilityclient.EditPanel
		android:id="@+id/popup_window" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="top">
		<TableRow>
			<Button android:id="@+id/button_edit_prevsize"
				android:layout_weight="1" android:layout_width="0dip"
				android:layout_height="wrap_content" android:text="A" />
			<Button android:id="@+id/button_edit_nextsize"
				android:layout_weight="1" android:layout_width="0dip"
				android:layout_height="wrap_content" android:text="AA" />
			<Button
				android:layout_weight="1" android:layout_width="0dip"
				android:layout_height="wrap_content" android:visibility="invisible" />
			<Button android:id="@+id/button_edit_prevwidth"
				android:layout_weight="1" android:layout_width="0dip"
				android:layout_height="wrap_content" android:text="w" />
			<Button android:id="@+id/button_edit_nextwidth"
				android:layout_weight="1" android:layout_width="0dip"
				android:layout_height="wrap_content" android:text="W" />
		</TableRow>
		<TableRow>
			<Button android:id="@+id/button_edit_toggleimages"
				android:layout_width="0dip" android:layout_weight="1"
				android:layout_height="wrap_content" android:text="Images" />
			<Button
				android:layout_weight="1" android:layout_width="0dip"
				android:layout_height="wrap_content" android:visibility="invisible" />
			<Button android:id="@+id/button_edit_togglelinks"
				android:layout_weight="1" android:layout_width="0dip"
				android:layout_height="wrap_content" android:text="Links" />
		</TableRow>
		<TableRow android:gravity="center">
			<Button android:id="@+id/button_edit_prevtheme"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="&lt;&lt;" />
			<TextView android:id="@+id/text_edit_currenttheme"
				android:text="Newspaper" android:gravity="center"
				android:layout_height="wrap_content" />
			<Button android:id="@+id/button_edit_nexttheme"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="&gt;&gt;" />
		</TableRow>
	</com.fahimk.readabilityclient.EditPanel>
</FrameLayout>
